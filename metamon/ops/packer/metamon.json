{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
    "aws_region": "us-east-1",
    "vpc_id": "vpc-1fea007b",
    "subnet_id": "subnet-8f1e5ba4",
    "ssh_username": "ubuntu",
    "source_ami": "ami-9a562df2",
    "atlas_username": "{{env `ATLAS_USERNAME`}}",
    "atlas_build_name": "metamon"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "{{user `aws_region`}}",
      "vpc_id": "{{user `vpc_id`}}",
      "subnet_id": "{{user `subnet_id`}}",
      "ssh_private_ip": false,
      "associate_public_ip_address": true,
      "ssh_username": "{{user `ssh_username`}}",
      "instance_type": "t2.micro",
      "source_ami": "{{user `source_ami`}}",
      "ami_name": "metamon {{timestamp}}",
      "ami_description": "AMI for metamon",
      "run_tags": {
        "ami-create": "metamon"
      },
      "tags": {
        "ami": "metamon"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sudo mkdir /ops",
        "sudo chmod a+w /ops"
      ]
    },
    {
      "type": "file",
      "source": ".",
      "destination": "/ops"
    },
    {
      "type": "shell",
      "script": "scripts/base.sh"
    },
    {
      "type": "shell",
      "script": "scripts/consul_client.sh"
    },
    {
      "type": "shell",
      "script": "scripts/supervisor.sh"
    },
    {
      "type": "shell",
      "script": "scripts/ansible.sh",
      "execute_command": "echo {{user `ssh_username`}} | {{ .Vars }} sudo -E -S sh '{{ .Path }}'"
    },
    {
      "type": "shell",
      "inline": [
        "sudo mkdir /app",
        "sudo chmod a+w /app"
      ]
    },
    {
      "type": "file",
      "source": "/packer/app",
      "destination": "/app"
    },
    {
      "type": "ansible-local",
      "playbook_file": "ansible/site_local.yml",
      "playbook_dir": "ansible",
      "group_vars": "ansible/group_vars"
    }
  ],
  "post-processors": [
    {
      "type": "atlas",
      "artifact": "{{user `atlas_username`}}/{{user `atlas_build_name`}}",
      "artifact_type": "amazon.ami",
      "metadata": {
        "created_at": "{{timestamp}}"
      }
    }
  ],
  "push": {
    "name": "{{user `atlas_username`}}/{{user `atlas_build_name`}}",
    "vcs": false
  }
}
